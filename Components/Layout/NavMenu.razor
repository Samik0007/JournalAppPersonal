@using JournalPersonalApp.Data.Abstractions
@inject IUserService UserService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Journal App</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="write-journal">
                <span class="bi bi-pencil-nav-menu" aria-hidden="true"></span> Write Journal
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="journal-list">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Journal List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-calendar-nav-menu" aria-hidden="true"></span> Calendar
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="export-pdf">
                <span class="bi bi-file-earmark-pdf-nav-menu" aria-hidden="true"></span> Export PDF
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
    </nav>

    <!-- Logout Button at Bottom -->
    <div class="logout-container">
        <div class="logout-divider"></div>
        <button class="logout-button" @onclick="HandleLogout">
            <span class="bi bi-logout-nav-menu" aria-hidden="true"></span>
            <span>Logout</span>
        </button>
    </div>
</div>

@code {
    private async Task HandleLogout()
    {
        await UserService.LogoutAsync();
        Navigation.NavigateTo("/", forceLoad: true);
    }
}
